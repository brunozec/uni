@using BFZ.AtividadeExtensionistaII.Pages.Auth
@using BFZ.AtividadeExtensionistaII.Pages.Cadastros
<Router
    AppAssembly="@typeof(Main).Assembly" >
    <Found
        Context="routeData" >

        @if (!AuthStore.IsAuthenticated
             &&  !routeData.PageType.Equals(typeof(Register))
             &&  !routeData.PageType.Equals(typeof(UnidadeDeNegocio))
            )
        {
            routeData = new RouteData(typeof(Login), new Dictionary<string, object>());
        }


        <RouteView
            RouteData="@routeData"
            DefaultLayout="@typeof(MainLayout)"/>
        <FocusOnNavigate
            RouteData="@routeData"
            Selector="h1"/>
    </Found>
    <NotFound>
        <LayoutView
            Layout="@typeof(MainLayout)" >
            <p
                role="alert" >
                Sorry, there's nothing at this address.
            </p>
        </LayoutView>
    </NotFound>
</Router>