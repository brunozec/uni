<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LojaDeJogos.Views.Vendas.VendaDetailPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Editar" Command="{Binding EditVendaCommand}" />
    </ContentPage.ToolbarItems>

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Código identificador:" FontSize="Medium" 
               TextColor="Black"/>
        <Label Text="{Binding Id}" FontSize="Small"
               TextColor="Black"/>
        <Label Text="Cliente (opcional):" FontSize="Medium" 
               TextColor="Black"/>
        <Label Text="{Binding NomeCliente}" FontSize="Small"
               TextColor="Black"/>
        <Label Text="CPF/CNPJ:" FontSize="Medium" 
               TextColor="Black"/>
        <Label Text="{Binding ClienteCpfCnpj}" FontSize="Small"
               TextColor="Black"/>
    </StackLayout>
    
</ContentPage>